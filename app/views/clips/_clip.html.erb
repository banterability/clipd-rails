<div class="clip-body">
	<div class="clip-content">
		<span class="bigQuote">&#8220;</span>
					<%=h clip.selection %>
	</div>
	<div class="clip-meta">
		<span class="clip-actions">
				<%= link_to 'link', clip %>
				<%= link_to 'delete', clip, :confirm => 'Are you sure?', :method => :delete %>
		</span>
		<span class="clip-info">
				From <%= link_to h(clip.sourceTitle), clip.sourceUri %> <%= timeago clip.created_at %>
		</span>
		<br style="clear:both" />
	</div>
</div>