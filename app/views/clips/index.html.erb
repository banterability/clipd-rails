<h1>Listing clips</h1>

<table>
  <tr>
    <th>Selection</th>
    <th>Sourceuri</th>
    <th>Sourcetitle</th>
  </tr>

<% for clip in @clips %>
  <tr>
    <td><%=h clip.selection %></td>
    <td><%=h clip.sourceUri %></td>
    <td><%=h clip.sourceTitle %></td>
    <td><%= link_to 'Show', clip %></td>
    <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
    <td><%= link_to 'Destroy', clip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New clip', new_clip_path %>
